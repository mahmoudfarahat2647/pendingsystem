# Application Settings
NEXT_PUBLIC_APP_NAME="pendingsystem"

# Required: Supabase Database
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-placeholder
