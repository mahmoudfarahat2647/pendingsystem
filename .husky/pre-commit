#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ¨ Running Biome format and lint..."

# Get staged files (TypeScript, JavaScript, JSON)
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(ts|tsx|js|jsx|json)$' || echo "")

if [ -n "$STAGED_FILES" ]; then
  echo "ğŸ“ Formatting files..."
  
  # Format and lint with Biome
  npx @biomejs/biome check --write $STAGED_FILES
  
  # Re-add formatted files to staging
  git add $STAGED_FILES
  
  echo "âœ… Format and lint complete"
else
  echo "â„¹ï¸  No TypeScript/JavaScript files to format"
fi

# Validate documentation
echo "ğŸ“š Validating documentation..."
npm run docs:validate || echo "âš ï¸  Doc validation warning (non-blocking)"

echo "âœ¨ Pre-commit checks passed!"
